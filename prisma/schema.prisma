generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" // or "sqlite"  
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String

  @@map("users")
}
model Battery {
  id             String   @id @default(uuid())
  name           String
  description    String?
  file           String?
  quantity       Int
  image          String?
  specs          String[]
  features       String[]
  certifications String[]
  datasheet      String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}
model Reflector {
  id            String   @id @default(uuid())
  name          String
  image         String
  specs         String[]
  features      String[]
  certifications String[]
  datasheet     String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@map("reflectors")
}
